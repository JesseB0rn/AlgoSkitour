{
  "latex-workshop.latex.build.forceRecipeUsage": false,
  // The following will hide the js and map files in the editor
  "files.exclude": {
    "**/*.aux": true,
    "**/*.bcf": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.bbl": true,
    "paper/*.xml": true,
    "paper/*.toc": true,
    "paper/*.gz": true,
    "paper/*.blg": true,
    "**/*.fls": true
  },
  "editor.wrappingIndent": "deepIndent",
  "editor.wordWrap": "on"
}
